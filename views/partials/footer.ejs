  <style>
    /* Main footer container */
    footer {
      width: 100%;
      background-color: #9d5ca0;
      padding: 0px;
    }

    /* Footer content wrapper */
    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      /* Enable flexbox */
      flex-direction: row;
      /* Set direction left to right */
      justify-content: space-between;
      /* Space items evenly */
      align-items: flex-start;
      /* Align items to top */
      gap: 50px;
      /* Space between sections */
    }

    /* Individual footer sections */
    .footer-section {
      flex: 1;
      /* Each section takes equal width */
    }

    .footer-content ul {
      list-style: none;
    }

    .footer-content a {
      color: #444444;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .footer-content a:hover {
      color: #1d1d1d;
    }

    .footer-content li {
      margin-bottom: 10px;
    }

    /* Headings */
    .footer-content h4 {
      color: 1d1d1d;
      margin-bottom: 20px;
      font-size: 18px;
    }

    /* Contact section */
    .contact-section p {
      color: #1d1d1d;
      margin-bottom: 10px;
    }


    /* Responsive design */
    @media (max-width: 768px) {
      .footer-content {
        flex-direction: column;
        /* Stack on mobile */
        padding: 0 20px;
      }
    }

    i {
      margin-right: 8px;
    }

    .footer-section,
    .links-section,
    .contact-section,
    .social-section {
      margin-bottom: 0px;
      text-align: center;
    }

    .privacy-policy {
      position: flex;
      /* Fixes the element on the screen */
      bottom: 10px;
      /* Position 20px from the bottom */
      right: 50px;
      /* Position 20px from the right */
